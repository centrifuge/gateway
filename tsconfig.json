{
  "compilerOptions": {
    "module": "esnext",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "preserve",
    "isolatedModules": true,
    "strictPropertyInitialization": false // https://github.com/swagger-api/swagger-codegen/issues/8180
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*spec.ts"
  ],
  "lib": [
    "es2018",
    "dom"
  ]
}
